# Project settings
PROJECT_NAME=Aeiouly
VERSION=1.0.0
DESCRIPTION=A FastAPI project with authentication and posts
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Auth specific configurations
REFRESH_TOKEN_EXPIRE_DAYS=7
ACCESS_TOKEN_COOKIE_NAME=aeiouly_access_token
REFRESH_TOKEN_COOKIE_NAME=aeiouly_refresh_token

# Cookie settings
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# Password reset
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_LENGTH=32

# SMTP Configuration (for password reset emails)
SMTP_SERVER=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
FROM_EMAIL=noreply@aeiouly.local
SMTP_TLS=true
SMTP_SSL=false

# Google AI API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Migrations
AUTO_MIGRATE_ON_STARTUP=false

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Front-end URL
CLIENT_SIDE_URL=http://localhost:3000

# Database
DATABASE_DIALECT=postgresql+psycopg2
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aeiouly
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_REGION="ap-southeast-1"
AWS_S3_BUCKET=your_aws_s3_bucket_here
AWS_S3_PUBLIC_URL=""
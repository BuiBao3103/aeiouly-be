# Project settings
PROJECT_NAME=Aeiouly
VERSION=1.0.0
DESCRIPTION=A FastAPI project with authentication and posts
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Auth specific configurations
REFRESH_TOKEN_EXPIRE_DAYS=7
ACCESS_TOKEN_COOKIE_NAME=aeiouly_access_token
REFRESH_TOKEN_COOKIE_NAME=aeiouly_refresh_token

# Cookie settings
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# Password reset
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
PASSWORD_RESET_TOKEN_LENGTH=32

# Database
DATABASE_URL=sqlite:///./app.db

# SMTP Configuration (for password reset emails)
# Sử dụng Mailtrap sandbox (khuyên dùng cho môi trường dev)
SMTP_SERVER=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
FROM_EMAIL=noreply@aeiouly.local
SMTP_TLS=true
SMTP_SSL=false

# Google AI API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Migrations
AUTO_MIGRATE_ON_STARTUP=false

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Front-end URL
CLIENT_SIDE_URL=http://localhost:3000
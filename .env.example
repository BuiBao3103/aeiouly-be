# Project settings
PROJECT_NAME=Aeiouly
VERSION=1.0.0
DESCRIPTION=A Aeiouly API
API_V1_STR=/api/v1

# Security
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Auth specific configurations
REFRESH_TOKEN_EXPIRE_DAYS=7
ACCESS_TOKEN_COOKIE_NAME=aeiouly_access_token
REFRESH_TOKEN_COOKIE_NAME=aeiouly_refresh_token

# Cookie settings
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=localhost

# Password reset
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60
PASSWORD_RESET_TOKEN_LENGTH=32

# SMTP Configuration (for password reset emails)
# Sử dụng Mailtrap sandbox (khuyên dùng cho môi trường dev)
SMTP_SERVER=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=
SMTP_TLS=true
SMTP_SSL=false

# Google AI API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# Migrations
AUTO_MIGRATE_ON_STARTUP=false

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173","http://127.0.0.1:5173"]


# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Front-end URL
CLIENT_SIDE_URL=http://localhost:3000

# Database
DATABASE_DIALECT=postgresql+asyncpg
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION="ap-southeast-1"
AWS_S3_BUCKET=
AWS_S3_PUBLIC_URL=""

#GOOGLE SERVICES
GOOGLE_OAUTH_CLIENT_ID=


GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=